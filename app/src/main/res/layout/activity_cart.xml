<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER IMAGE -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bckrnd" />

        <!-- SEARCH BAR -->

        <!-- TITLE -->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="-24dp"
            android:background="@drawable/searchbaraddtocart"
            android:hint="Search"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping Cart"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            style="@style/MaterialAlertDialog.Material3.Body.Text.CenterStacked"/>

        <!-- CART ITEM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chicken"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:text="Chicken"
                    android:textStyle="bold" />

                <TextView
                    android:text="1 kg" />

                <TextView
                    android:text="Php 280.00"
                    android:textColor="#4CAF50" />
            </LinearLayout>
        </LinearLayout>

        <!-- SUBTOTAL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtotal: Php 523.00"
            android:textColor="#4CAF50"
            android:gravity="end"
            android:layout_marginTop="16dp" />

        <!-- BUTTON -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Continue Shopping"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="12dp" />

        <!-- RECOMMENDED -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommended for you"
            android:textColor="#4CAF50"
            android:layout_marginTop="24dp" />

        <!-- RECOMMENDED GRID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- ITEM 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/cabbage" />

                <TextView android:text="Cabbage" />
                <TextView android:text="Php 90 / kg" />
            </LinearLayout>

            <!-- ITEM 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/brocolli" />

                <TextView android:text="Broccoli" />
                <TextView android:text="Php 120 / kg" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
